{
  "name": "ezquality",
  "displayName": "EZQuality",
  "description": "Generate unit tests automatically and locally, leveraging LLMs.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python",
    "onLanguage:java",
    "onLanguage:csharp",
    "onLanguage:php",
    "onLanguage:ruby",
    "onLanguage:go",
    "onLanguage:rust",
    "onLanguage:c",
    "onLanguage:cpp"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ezquality-sidebar-view",
          "title": "EZ Quality",
          "icon": "media/ezquality.svg"
        }
      ]
    },
    "views": {
      "ezquality-sidebar-view": [
        {
          "type": "webview",
          "id": "ezquality-sidebar",
          "name": "EZ Quality",
          "contextualTitle": "EZQuality"
        }
      ]
    },
    "commands": [
      {
        "command": "ezquality.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "ezquality.createUnitTest",
        "title": "EZQuality - Create Unit Test",
        "category": "EZ Quality"
      },
      {
        "command": "ezquality.explainCode",
        "title": "EZQuality - Explain Code",
        "category": "EZ Quality"
      },
      {
        "command": "ezquality.showMenu",
        "title": "EZQuality - Shgow Menu",
        "category": "EZ Quality"
      }
    ],
    "configuration": {
      "title": "Method CodeLens",
      "properties": {
        "methodCodelens.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable method CodeLens"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "ezquality.showMenu",
          "when": "false"
        }
      ]    
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "concurrently \"rollup -c -w --bundleConfigAsCjs\" \"webpack --watch\"",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@tsconfig/svelte": "^5.0.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.19.0",
    "ollama": "^0.5.13",
    "rollup": "^3.15.0",
    "rollup-plugin-css-only": "^4.3.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.1.2",
    "svelte": "^3.55.0",
    "svelte-check": "^3.0.0",
    "svelte-preprocess": "^5.0.0",
    "ts-loader": "^9.5.2",
    "tslib": "^2.5.0",
    "typescript": "^5.7.3",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  }
}
